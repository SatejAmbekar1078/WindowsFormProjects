@model string
@{
    ViewBag.Title = "Home Page";
    ViewData["Title"] = "Upload PDF";
    ViewData["ActivePage"] = "Upload";
}

<h2>Upload PDF</h2>
<form asp-action="UploadPdf" asp-controller="Home" method="post" enctype="multipart/form-data">
    <input type="file" name="file" accept=".pdf" />
    <button type="submit">Upload</button>
</form>

<p>@ViewBag.Message</p>
